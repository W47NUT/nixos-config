#!/usr/bin/env bash
set -e
if [[ ! -d "/home/test/Projects/W47NUT-nixos-config/main" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/test/Projects/W47NUT-nixos-config/main")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/test/Projects/W47NUT-nixos-config/main" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/test/Projects/W47NUT-nixos-config/main/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/test/Projects/W47NUT-nixos-config/main/.envrc" "/home/test/Projects/W47NUT-nixos-config/main/.direnv"/*.rc
